<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    a {
      text-decoration: none;
    }
  </style>
</head>
<body>
  <h1><a href="/">GERENCIADOR FINANCEIRO</a></h1>
  <ul>
    <% lista.forEach(element => { %>
      <li> <%= element.nome.toUpperCase() %> </li>
      <li> R$ <%= element.valor %> </li>
      <li> <%= element.vencimento %> </li>
      <li> <%= element.parcelas %> </li>
      <button>
        <a href="edit/<%= element.id %>">Editar</a>
      </button><hr>
      <br>
    <% }) %>
  </ul>
</body>
</html>